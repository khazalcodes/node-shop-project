extends ../layouts/main-layout.pug 

block styles
	link(rel="stylesheet", href="/css/product.css")
	link(rel="stylesheet", href="/css/forms.css")

block content
	main
		if hasProductEntries
			ul
				each productEntry, id in productEntries
					li
						p #{productEntry.title}: (#{productEntry.quantity})
						form.button-form(action='/shop/cart/remove-product', method='post')
							button.btn.btn-warning(type='submit') Remove from Cart
							input(type='hidden' name='id' value=id)

			h2 Total price: #{totalPrice}

