extends ../layouts/main-layout.pug 

block styles
	link(rel="stylesheet", href="/css/product.css")

block content
	main
		if hasProducts
			.grid
				each product in products
					article.card.product-item
						header.card__header
							h1.product__title #{product.title}							
						.card__image
							img(src=product.imageUrl alt="A Book")
						.card__content
							h2.product__price $#{product.price}
							p.product__description #{product.description}
						.card__actions
							form.button-form(action='/shop/product-details', method="get")
								button.btn(type="submit") Details
								include ../partials/product-viewmodel-values

							include ../partials/add-to-cart
		else
			h1 No prods baby