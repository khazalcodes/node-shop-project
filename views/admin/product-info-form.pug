extends ../layouts/main-layout

block styles
    link(rel="stylesheet", href="/css/product.css")
    link(rel="stylesheet", href="/css/forms.css")

block content
    main
        form.product-form(action=postPath method="POST")
            input(type="hidden" name="id" value=product.id)
            .form-control
                label(for="title") Title
                input(type="text" name="title" id="title" value=product.title required)
            .form-control
                label(for="imageUrl") Image Url
                input(type="text" name="imageUrl" id="imageUrl" value=product.imageUrl required)
            .form-control
                label(for="price") Price
                input(type="number" name="price" id="price" step="0.01" value=product.price required)
            .form-control
                label(for="description") Description
                textarea(name="description" id="description" rows="5"  required) #{product.description}

            button.form-control.btn(type="submit") #{submitButtonText}
